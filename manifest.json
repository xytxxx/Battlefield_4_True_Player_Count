{
    "name": "BF4 True Player Count",
    "version": "1.0",
    "description": "Shows how many players are actually on the server!",
    "manifest_version": 2,
    "permissions": ["activeTab"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "js": ["content.js"],
        "matches": ["https://battlelog.battlefield.com/bf4/servers/*"],
        "run_at": "document_end"
    }]
}